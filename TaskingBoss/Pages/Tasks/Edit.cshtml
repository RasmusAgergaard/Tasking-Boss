@page "{taskId:int}"

@model TaskingBoss.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Editing task "@Model.Task.Title"</h1>

<form method="post">
    <input type="hidden" asp-for="Task.TaskId" />

    <div class="form-group">
        <label asp-for="Task.Title"></label>
        <input asp-for="Task.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Task.Description"></label>
        <input asp-for="Task.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Task.Status"></label>
        <select class="form-control" asp-for="Task.Status" asp-items="@Model.Status">

        </select>
    </div>

    <button type="submit" class="btn btn-outline-primary">Save task</button>
</form>