@page
@model TaskingBoss.Pages.Tasks.ListModel
@{
}

<h1>Tasks</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </span>
        </div>

    </div>
</form>

<table class="table">
    @foreach (var task in Model.Tasks)
    {
        <tr>
            <td>@task.Title</td>
            <td>@task.Description</td>
            <td>@task.Status</td>
            <td>
                <a class="btn btn-outline-secondary btn-sm" asp-page="./Detail" asp-route-taskId="@task.Id">Details</a>
                <a class="btn btn-outline-secondary btn-sm" asp-page="./Edit" asp-route-taskId="@task.Id">Edit</a>
            </td>
        </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-outline-primary">Add new task</a>
